nextflow_process {

    name "Test Process BUILD_ALLELETABLE"
    script "modules/local/build_alleletable.nf"
    process "BUILD_ALLELETABLE"

    test("Should run without failures on real data") {

        when {
            params {
                amplicon_info = "${projectDir}/tests/example_data/multi_pool_amplicon_info.tsv"
                denoised_asvs = "${projectDir}/tests/example_data/dada2.clusters.txt"
                processed_asvs = "${projectDir}/tests/example_data/alignments.pseudocigar.txt"
                processed_asvs_unmasked = "${projectDir}/tests/example_data/alignments.pseudocigar.unmasked.txt"
                aligned_asv_table = "${projectDir}/tests/example_data/masked.alignments.txt"
            }
            process {
                """
                input[0] = params.amplicon_info
                input[1] = params.denoised_asvs
                input[2] = params.processed_asvs
                input[3] = params.processed_asvs_unmasked
                input[4] = params.aligned_asv_table
                """
            }
        }

        then {
            assert process.success
            assert process.out.alleledata
            assert process.out.alleledata_collapsed

            assert path(process.out.alleledata.get(0)).md5 == "bd7a59407f8955079a7c81d0ffc9674c"
            assert path(process.out.alleledata_collapsed.get(0)).md5 == '1e1337889117a47e04bb7646fc46b42a'
        }

    }

}

