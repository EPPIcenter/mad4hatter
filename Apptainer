Bootstrap: docker
From: rocker/tidyverse:4.3.1

%post
    apt-get update && apt-get install -y --no-install-recommends \
        build-essential \
        python3-pip \
        libssl-dev \
        libbz2-dev \
        libsdl1.2-dev \
        liblzma-dev \
        libcurl4-openssl-dev \
        zlib1g-dev \
        libxml2-dev \
        libfontconfig1-dev \
        libharfbuzz-dev \
        libfribidi-dev \
        libfreetype6-dev \
        libpng-dev \
        libtiff5-dev \
        libjpeg-dev \
        trf \
        bwa \
        bcftools \
        samtools \
        default-jre \
        pandoc \
        jq \
        parallel \
        fastp \
        && rm -rf /var/lib/apt/lists/*

    # Install Python dependencies
    pip3 install cutadapt==4.4 pandas==2.0.3 biopython==1.79

    # R configuration
    mkdir -p /usr/local/lib/R/etc/ /usr/lib/R/etc/
    echo "options(repos = c(CRAN = 'https://cran.rstudio.com/'), download.file.method = 'libcurl', Ncpus = 4)" > /usr/local/lib/R/etc/Rprofile.site
    echo "options(repos = c(CRAN = 'https://cran.rstudio.com/'), download.file.method = 'libcurl', Ncpus = 4)" > /usr/lib/R/etc/Rprofile.site
    R -e 'install.packages("remotes")'

    # Install R packages
    Rscript -e 'install.packages("remotes")'
    Rscript -e 'remotes::install_cran(c("ggbeeswarm", "gridExtra", "rmarkdown", "foreach", "doMC", "argparse"), upgrade = "never")'

    # Install Bioconductor packages
    Rscript -e 'if (!require("BiocManager", quietly = TRUE)) { install.packages("BiocManager"); }; BiocManager::install(version = "3.18");'
    Rscript -e 'BiocManager::install("dada2", ask = FALSE)'
    Rscript -e 'BiocManager::install("muscle", ask = FALSE)'
    Rscript -e 'BiocManager::install("BSgenome", ask = FALSE)'

    # Install additional Bioconductor tools
    Rscript -e 'BiocManager::install(c("ShortRead", "GenomicRanges", "IRanges"), ask = FALSE)'

%environment
    export LANG=C.UTF-8
    export LC_ALL=C.UTF-8